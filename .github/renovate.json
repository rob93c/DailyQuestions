{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false,
            "minimumReleaseAge": "1 week",
            "matchPackageNames": [
                "*"
            ]
        }
    ],
    "extends": [
        "config:recommended"
    ]
}
